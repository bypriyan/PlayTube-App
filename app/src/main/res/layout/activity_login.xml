<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".register.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/logo"
                app:tint="@color/appColor"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/textLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogIn"
                android:layout_below="@id/imageLogo"
                android:textColor="@color/black"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_6sdp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/googleBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/greay_outline"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/google"
                            android:padding="@dimen/_4sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/dark_greay"/>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/googleProgressbar"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminateTint="@color/appColor"/>

                </FrameLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/facebookBtn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/greay_outline"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/facebook"
                        android:padding="@dimen/_4sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/dark_greay"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/skipBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/greay_outline"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:src="@drawable/logo"
                            android:padding="@dimen/_4sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skip"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/dark_greay"/>

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/dark_greay"
            android:text="@string/rules"/>

        <TextView
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_greay"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:text="T&amp;C "

            />

        <TextView
            android:id="@+id/and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_greay"
            android:layout_gravity="center_vertical"
            android:text=" and "
            android:layout_toRightOf="@id/terms"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_greay"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/_10ssp"
            android:text=" Privacy Policy."
            android:layout_toRightOf="@id/and"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>

</RelativeLayout>